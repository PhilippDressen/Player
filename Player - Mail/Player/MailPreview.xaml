<Window x:Class="Player.MailPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MailPreview" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF3C3838"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
        <RichTextBox x:Name="rtb" Margin="10,10,10,40">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Vorschau"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <Button x:Name="b_go" Content="GO!" HorizontalAlignment="Center" Margin="0,10" VerticalAlignment="Bottom" Padding="5,1" Grid.IsSharedSizeScope="True" FontSize="14" FontWeight="Bold" Foreground="White" Click="b_go_Click">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF4D0707" Offset="1"/>
                    <GradientStop Color="Red"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
